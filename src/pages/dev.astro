---
import Layout from '../layouts/Layout.astro';
import Break from '../components/Break.astro';
import ProjectDetail from '../components/ProjectDetail.astro';
import hanziImage from '../images/hanzi.png';
import superbOwlImage from '../images/superbOwl.png';
import loreSageImage from '../images/loreSage.png';
import onwardImage from '../images/onward.png';
import recipesImage from '../images/recipes.png';
import jackmodsImage from '../images/jackmods.png';
import posenetImage from '../images/posenet.png';
import StatusEnum from '../utilities/statusEnum';

const projects = [
  {
    title: 'hanzi (working title)',
    status: StatusEnum.dev,
    time: 'july 2024 - present',
    description: 'a site made for learning chinese characters and vocabulary in a structured order. includes a spaced repetition system for reviews that enables easy practice and memorization. has been incredibly useful for me.',
    media: [
      {
        type: 'image',
        src: hanziImage,
      }
    ],
    links: [
      {
        href: 'https://hanzi.guata.me',
        text: 'hanzi'
      }
    ],
    files: []
  },
  {
    title: 'superb owl',
    status: StatusEnum.completed,
    time: 'february 2024 - february 2024',
    description: 'a site made for betting fake internet points on events that may or may not occur. designed for the super bowl, usable for many other events!',
    media: [
      {
        type: 'image',
        src: superbOwlImage
      }
    ],
    links: [
      {
        href: 'https://superbowl.guata.me',
        text: 'superb owl'
      }
    ],
    files: []
  },
	{
		title: 'lore sage',
		status: StatusEnum.completed,
		time: 'march 2023 - july 2023',
		description: 'with your creative input, lore sage transforms your ideas into immersive settings teeming with diverse landscapes, rich histories, and compelling storylines. as a dungeon master, you can now focus on weaving together the tales of your player characters, while lore sage expertly handles the intricate details of the setting itself. (currently inactive)',
		media: [
			{
				type: 'image',
				src: loreSageImage
			}
		],
		links: [
			{
				href: 'https://loresage.com/',
				text: 'lore sage'
			}
		],
		files: []
	},
    {
		title: 'onward! games',
		status: StatusEnum.dev,
		time: 'july 2022 - present',
		description: 'a studio focused on creating fun tools to help players of ttrpgs create detailed and exciting characters and locations.',
		media: [
			{
				type: 'image',
				src: onwardImage
			}
		],
		links: [
			{
				href: 'https://onward.games/',
				text: 'onward! games'
			}
		],
		files: []
    },
    {
        title: 'recipes',
        status: StatusEnum.completed,
        time: 'june 2022',
        description: "a personal recipe website with a few useful features i never see on other websites and no bloat. nice features include ingredient sorting by when they appear in the recipe and ingredient highlighting on hover.",
        media: [
            {
                type: 'image',
                src: recipesImage
            }
        ],
        links: [
            {
                href: 'http://recipes.guata.me/',
                text: 'recipes'
            }
        ],
        files: []
    },
    {
        title: 'jackmods',
        status: StatusEnum.completed,
        time: 'october 21, 2020',
        description: 'a web-based interface for modifying jackbox party pack games. only supports blather \'round. by uploading the default word list, you can make modifications and explore how the different prompts are implemented. alternatively, you can also create your own prompt list from scratch and replace the game\'s default list. the specific file you need (included in the game in a hidden folder) is blankyblankpasswords.jet.',
        media: [
            {
                type: 'image',
                src: jackmodsImage
            }
        ],
        links: [
            {
                href: 'http://jackmods.surge.sh/',
                text: 'jackmods'
            }
        ],
        files: [
            {
                href: '/files/smashWordlist.jet',
                text: 'smashwordlist.jet',
                size: '66.7 kilobytes'
            }
        ]
    },
    {
        title: 'posenet art',
        status: StatusEnum.completed,
        time: 'december 21, 2020',
        description: 'a website for dancing with music while adding different effects based on what you do. built with posenet as part of ai@mit labs.',
        media: [
            {
                type: 'image',
                src: posenetImage
            }
        ],
        links: [
            {
                href: 'https://posenet-art.netlify.app/',
                text: 'posenet art'
            }
        ],
        files: []
    }
];

---

<Layout title="dev">
    {projects.map((project, i) => {
        if (i === 0) {
            return <ProjectDetail project={project}/>
        }
        return <Break/> <ProjectDetail project={project}/>
    })}
</Layout>

<style>
    .info {
        display: flex;
        flex-direction: row-reverse;
        align-items: center;
        gap: 1.2em;
        justify-content: space-between;
    }
    @media (max-width: 550px) {
        .info {
            flex-direction: column;
            align-items: start;
            gap: 1em;
        }
    }
</style>
