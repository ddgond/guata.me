---
const { href } = Astro.props;
---

<a class="full-link" href={href}>
    <slot/>
</a>

<style>
    .full-link {
        display: block;
        color: rgb(var(--accent-light));
        margin: 0.6em 0.2em;
        padding: 0.6em 1.2em;
        border-radius: 2px;
        border: 1px dashed rgb(var(--accent-dark));
        transition: all 0.2s;
    }
    .full-link:hover {
        background-color: rgb(var(--accent-dark));
    }
</style>